{
  "compilerOptions": {    
    "target": "es2017",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,    
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "baseUrl": "src",
    "rootDirs": ["src"],
    "outDir": "dist" 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
